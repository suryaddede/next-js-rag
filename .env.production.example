# Production Environment Configuration
# Copy this file to .env.local for production deployment

# ChromaDB Configuration (Production)
# Use internal Docker network URL when running in Docker
CHROMA_URL=http://chromadb:8000

# Model Provider Configuration (required for the RAG functionality)
# IMPORTANT: Use your actual production API keys
GOOGLE_GENERATIVE_AI_API_KEY=your_production_google_ai_api_key_here
VOYAGE_AI_API_KEY=your_production_voyage_ai_api_key_here

# App Configuration (Production)
# IMPORTANT: Change to your actual production domain
NEXT_PUBLIC_APP_URL=https://your-domain.com
NODE_ENV=production

# Security Configuration (Production)
# Optional: Disable debug logging in production
DEBUG=false

# Optional: Set log level for production
LOG_LEVEL=error

# Optional: Add security headers
SECURITY_HEADERS=true

# ChromaDB Authentication (Production)
# These should match your docker-compose.prod.yaml settings
CHROMA_AUTH_USER=admin
CHROMA_AUTH_PASSWORD=your_secure_chroma_password_here
